{
  "manifest_version": 2,

  "name": "Get It Done",
  "description": "This extension gets shit done.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["jquery.js", "content.js"]
    }],

  "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": ["poop.png"]
}
