{
  "manifest_version": 2,
  "name": "Get It Done",
  "description": "This extension gets shit done.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "idle",
    "windows"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["libs/jquery.js", "content.js"]
  }],
  "browser_action": {
    "default_icon": "clock.png",
    "default_popup": "popup.html",
    "default_title": "Get It Done"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "web_accessible_resources": ["poop.png","hello.wav"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
